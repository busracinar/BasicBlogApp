@model IEnumerable<BlogMvcApp.Models.CategoryModel>

@{
    ViewBag.Title = "Index";
}

<h2>Kategori Listesi</h2>
<hr />

<p>
    @Html.ActionLink("Kategori Ekle", "Create", null, new { @class = "btn btn-primary btn-sm" })
</p>
<hr />
@if (TempData["Kategori"]!= null)
{
    var kategori = (BlogMvcApp.Models.Category)TempData["Kategori"];
    <div class="alert alert-success" >
        <span class="glyphicon glyphicon-ok"></span>
        <b>@kategori.KategoriAdi</b> Güncellendi.
    </div>
}
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th style="width:70%;">
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th style="width:14%;">
            @Html.DisplayNameFor(model => model.BlogSayisi)
        </th>
        <th style="width:190px;"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.KategoriAdi
        </td>
        <td>
            @item.BlogSayisi
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
